#include <stdio.h>
#include <math.h>
int main ()
{
	float res;
	int a,b,choice;
	printf ( "Enter the First Number :- \n");
	scanf ( "%d",&a);
	printf ( "Enter the Second Number :- \n");
	scanf ( "%d",&b);
	
	printf ( "Choice for The Following :- \n");
	printf ( " 1)- Addition \n 2)- Subtraction \n 3)- Division \n 4)- Multiplication \n 5)- Remainder \n");
	printf ( " \nEnter the Choice :- \n");
	scanf ("%d", &choice);
	
	if (choice == 1)
	{
		res = a+b;
	}
	else if (choice ==2)
	{
		res = a-b;
	}
	else if (choice == 3)
	{
		res = a/b;
	}
	else if (choice == 4)
	{
		res = a*b;
	}
	else if ( choice ==5 )
	{
		res = a%b;
	}
	else
	{
		printf ( " Invalid Input");
	}

	
	printf ("The Required answer is :- %f",res);
	return 0;
}



-------------------------------------------

Output :-


Enter the First Number :-
10
Enter the Second Number :-
5
Choice for The Following :-
 1)- Addition
 2)- Subtraction
 3)- Division
 4)- Multiplication
 5)- Remainder

Enter the Choice :-
3
The Required answer is :- 2.000000
----------------------------------------------
